<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sectionTitle"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Datos del Usuario"
        android:textColor="@color/bgDark"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/questionList"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:background="@drawable/rounded_curner_question"
            android:layout_marginTop="30dp"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Localidad"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/localidad"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Sección"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/seccion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Emisión"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/emision"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Vigencia"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/vigencia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/IDuser"
                    android:textColor="@color/bgDark"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/idCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
