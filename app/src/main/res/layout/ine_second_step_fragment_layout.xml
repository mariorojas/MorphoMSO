<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sectionTitle"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Datos del Usuario"
        android:textColor="@color/bgDark"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/questionList"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/rounded_curner_question"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="AÃ±o de Registro"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/anioRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Clave de Elector"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/claveElector"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="textCapCharacters"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="CURP"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/curp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="textCapCharacters"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Estado"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/estado"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Municipio"
                    android:textColor="@color/bgDark"
                    android:layout_height="wrap_content" />

                <com.morpho.demo.customs.CustomEditText
                    android:id="@+id/municipio"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="30dp"
                    android:inputType="number"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
